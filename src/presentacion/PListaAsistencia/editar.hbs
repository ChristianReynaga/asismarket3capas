<body>


    <div class="container col-md-4 mx-auto">
        <h2>Listas de Asistencia</h2>


        <form action="/asistencia/modificar?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="idLista" value="{{this.idLista}}">
            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input type="date" id="fecha" name="fecha" value="{{fecha}}" min="2020-01-01" max="2020-12-31">
            </div>

            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th scope="col">propietario</th>
                        <th scope="col">puesto</th>
                        <th scope="col">sector</th>
                        <th scope="col">asistencia</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each detalles}}
                    <tr scope="row">
                        <td>{{this.apPaterno}} {{this.nombre}}</td>
                        <td>{{this.cod }}</td>
                        <td>{{this.sector}}</td>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="{{this.cod}}">
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary btn-block">modificar</button>
        </form>
    </div>
</body>