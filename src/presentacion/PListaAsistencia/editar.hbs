<body>


    <div class="container col-md-4 mx-auto">
        <h2>Listas de Asistencia</h2>


        <form action="/asistencia/modificar?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="idLista" value="{{idLista}}">
            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input type="date" id="fecha" name="fecha" value="{{dateFormat this.fecha "YYYY-MM-DD"}}" min="2020-01-01" max="2020-12-31">
            </div>

            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th scope="col">propietario</th>
                        <th scope="col">puesto</th>
                        <th scope="col">sector</th>
                        <th scope="col">asistencia</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each detalles}}
                    <tr scope="row">                        
                        <td>{{this.comerciante_id}}-{{this.apPaterno}} {{this.nombre}}</td>
                        <td>{{this.puesto_id }}</td>
                        <td>{{this.sector}}</td>
                        <td>
                            {{#if this.estado}}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="{{this.puesto_id}}" checked>
                                </div>
                            {{else}}
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="{{this.puesto_id}}">
                                </div>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary btn-block">modificar</button>
            <hr>            
        </form>
        <form method="POST" action="/asistencia/eliminar?_method=DELETE">  
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="idLista" value="{{idLista}}">
            <button type="submit" class="btn btn-danger btn-block">eliminar</button>
        </form>

    </div>
</body>