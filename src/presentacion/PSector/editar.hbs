

<div class="container col-md-4 mx-auto">
    <div class="card text-center">
      <div class="card-header">
        <h3>Editar - sector</h3>
      </div>
      <div class="card-body">
        <form action="/sectores/modificar?_method=PUT" method="POST">
          <input type="hidden" name="_method" value="PUT">

          <div class="form-group">
            <label for="cod">cod</label>
            <input type="number" class="form-control" id="cod" name="cod" aria-describedby="codHelp"
              placeholder="Ingresar el cod" required value={{cod}} contenteditable="false">
            <small id="codHelp" class="form-text text-muted">id unico</small>
          </div>
          <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingresar el nombre" required
              autocapitalize="words" value="{{nombre}}">         
          <br>

          <button type="submit" class="btn btn-primary btn-block">
            guardar
          </button>
        </form>
      </div>
    </div>
  </div>